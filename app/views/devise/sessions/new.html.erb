<div class="row">
  <div class="col m6 offset-m3 center">
  <h5>Log in</h5>
    <%= link_to "Log In with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn red darken-1" %>
    <%= link_to "Log In with Facebook", user_omniauth_authorize_path(:facebook), class: "btn blue darken-1" %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemessage" %>
      <div class="input-field">
        <%= f.email_field :email, :class => "validate", :placeholder => "Email" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %><br /><br />
        </div>
      <% end -%>

      <button class="btn waves-effect waves-light" type="submit" name="action">
        <%= f.submit "Log In" %>
      </button>

      <%= link_to "Forgot password", new_user_password_path, :class=>"btn waves-effect waves-light" %>

    <% end %>
  </div>
</div>