<div class="row">
  <div class="col m6 offset-m3 center">

    <h5>Forgot your password?</h5>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render partial: "shared/devisemessage" %>

      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "off", :class => "validate", :placeholder => "Email" %>
      </div>

      <div class="btn waves-effect waves-light" type="submit" name="action">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>
  </div>
</div>

