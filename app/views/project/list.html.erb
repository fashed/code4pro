<div class="row">
<br />
  <h3>My Projects</h3>
  <% if @projects.count > 0 %>

    <% @projects.each do |project| %>
      <%= link_to project do %>
        <div class="col s12 m6 l4">
          <div class="card">

            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag project.image %> 
            </div>

            <div class="card-content project-card">
              <span class="card-title grey-text text-darken-4">
                <%= truncate("#{project.name}", length: 28) %>
              </span>
            </div>

          </div>
        </div>
      <% end %>

    <% end %>
  <% else %>
    <div class="center">
      <h5>You're currently not in any projects!</h5>
      <%= link_to "Show me all projects", root_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
